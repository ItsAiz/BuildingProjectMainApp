<div class = "mt-3 mb-3" style="overflow-x:auto;">
    <table class="table table-striped table-bordered border-dark productsTable" style="width: 100%;">
    <thead class="table text-center" style="background: #202022; color: white">
        <tr style="border-color: black">
            <th>Identificador</th>
            <th>Número de Apartamento</th>
            <th>Dimensión</th>
            <th>índice de Copropiedad</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody class="text-center">
            <% while @count<@propiedades.length %>
        <tr>
            <td><%= @propiedades[@count]['Identificador'] %></td>
            <td><%= @propiedades[@count]['NumApto']  %></td>
            <td><%= @propiedades[@count]['Dimension']  %></td>
            <td><%= @propiedades[@count]['IndiceCopropiedad']  %></td>
            <td>
            <button type="button" class="btn btn-outline-primary"> Pagos Realizados</button>
            <button type="button" class="btn btn-outline-primary"> Pendientes </button>
            <button type="button" class="btn btn-outline-primary"> Paz y Salvo </button>
            </td>
        </tr>
            <% @count = @count+1%>
            <% end %>
    </tbody>
    </table>
</div>