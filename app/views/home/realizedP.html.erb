<h2>Pagos realizados</h2>
<div class = "mt-3 mb-3" style="overflow-x:auto;">
    <table class="table table-striped table-bordered border-dark productsTable" style="width: 100%;">
    <thead class="table text-center" style="background: #202022; color: white">
        <tr style="border-color: black">
            <th>Identificador</th>
            <th>Número de Apartamento</th>
            <th>Número de Torre</th>
            <th>Dimensión</th>
            <th>índice de Copropiedad</th>
        </tr>
    </thead>
    <tbody class="text-center">
        <tr>
            <td><%=@propiedad['Identificador']%></td>
            <td><%=@propiedad['NumApto']%></td>
            <td><%=@propiedad['NumTorre']%></td>
            <td><%=@propiedad['Dimension']%></td>
            <td><%=@propiedad['IndiceCopropiedad']%></td>
        </tr>
    </tbody>
    </table>
</div>
<div class = "mt-3 mb-3" style="overflow-x:auto;">
    <table class="table table-striped table-bordered border-dark productsTable" style="width: 100%;">
    <thead class="table text-center" style="background: #202022; color: white">
        <tr style="border-color: black">
            <th>ID del Pago</th>
            <th>Fecha de Pago</th>
            <th>Valor del Pago</th>
        </tr>
    </thead>
    <tbody class="text-center">
        <% while @count<@pagos.length %>
        <tr>
            <td><%= @pagos[@count]['IdPago'] %></td>
            <td><%= @pagos[@count]['FechaPago']  %></td>
            <td><%= @pagos[@count]['ValorPago']  %></td>
        </tr>
            <% @count = @count+1%>
            <% end %>
    </tbody>
    </table>
</div>