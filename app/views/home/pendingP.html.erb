<h2>Pagos pendientes</h2>
<div class = "mt-3 mb-3" style="overflow-x:auto;">
    <table class="table table-striped table-bordered border-dark productsTable" style="width: 100%;">
    <thead class="table text-center" style="background: #202022; color: white">
        <tr style="border-color: black">
            <th>Identificador</th>
            <th>Número de Apartamento</th>
            <th>Número de Torre</th>
            <th>Dimensión</th>
            <th>índice de Copropiedad</th>
        </tr>
    </thead>
    <tbody class="text-center">
        <tr>
            <td><%=@propiedadPending['Identificador']%></td>
            <td><%=@propiedadPending['NumApto']%></td>
            <td><%=@propiedadPending['NumTorre']%></td>
            <td><%=@propiedadPending['Dimension']%></td>
            <td><%=@propiedadPending['IndiceCopropiedad']%></td>
        </tr>
    </tbody>
    </table>
</div>
<div class = "mt-3 mb-3" style="overflow-x:auto;">
    <table class="table table-striped table-bordered border-dark productsTable" style="width: 100%;">
    <thead class="table text-center" style="background: #202022; color: white">
        <tr style="border-color: black">
            <th>ID del Pago</th>
            <th>Fecha de Pago</th>
            <th>Valor del Pago</th>
            <th>Descripción</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody class="text-center">
    <% @pagos.each do |p| %>
  <tr>
    <td><%= p.IdPago %></td>
    <td><%= p.Fecha %></td>
    <td><%= p.ValorPagar %></td>
    <td><%= p.Descripcion %></td>
    <td><button type="button" class="btn btn-outline-primary" > <%= link_to 'Pagar', home_recibo_path(p.id)%></button>
    </td>
  </tr>
    <% end %>
    </tbody>
    </table>
</div>